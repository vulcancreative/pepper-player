{
  "name": "@pepper/pepper-player",
  "version": "2.0.0",
  "author": "Vulcan",
  "private": true,
  "license": "Vulcan Closed-Source",
  "main": "lib/pepper.js",
  "repository": "github:chris-calo/pepper-player",
  "description": "A JavaScript-based MPEG-DASH player, but more specialer.",
  "scripts": {
    "dev": "NODE_ENV=development webpack --module-bind js=babel-loader --w",
    "build": "NODE_ENV=production webpack --module-bind js=babel-loader && npm run gzip",
    "test": "npm run build && jest --silent && size-limit",
    "test:coverage": "jest --silent --coverage --coverageReporters=text-lcov | coveralls && size-limit",
    "size": "size-limit",
    "gzip": "gzip -k -9 -f -- lib/pepper.js"
  },
  "size-limit": [
    {
      "limit": "10 KB",
      "path": "lib/pepper.js"
    }
  ],
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "edge": "16",
                "firefox": "59",
                "chrome": "65",
                "safari": "11.1"
              },
              "exclude": [
                "transform-async-to-generator"
              ]
            }
          ],
          "preact"
        ]
      }
    },
    "presets": [
      [
        "env",
        {
          "targets": {
            "edge": "16",
            "firefox": "59",
            "chrome": "65",
            "safari": "11.1"
          },
          "exclude": [
            "transform-async-to-generator"
          ]
        }
      ],
      "preact"
    ],
    "plugins": [
      [
        "transform-react-jsx",
        "@babel/plugin-proposal-optional-chaining"
      ]
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-optional-chaining": "^7.0.0-beta.49",
    "babel-core": "^6.26.2",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-preset-env": "^1.6.1",
    "babel-preset-preact": "^1.1.0",
    "babel-register": "^6.26.0",
    "coveralls": "^3.0.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "jest": "^23.1.0",
    "size-limit": "^0.18.2",
    "style-loader": "^0.21.0",
    "webpack": "^4.6.0",
    "webpack-bundle-analyzer": "^2.13.1",
    "webpack-bundle-size-analyzer": "^2.7.0",
    "webpack-cli": "^3.0.4"
  }
}
